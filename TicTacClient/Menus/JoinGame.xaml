<Page x:Class="TicTacClient.Menus.JoinGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="525"
	Title="JoinGame" Loaded="OnLoaded">

    <Grid>
        <Label Content="Join Game" Height="40" HorizontalAlignment="Left" Margin="197,48,0,0" Name="label1" VerticalAlignment="Top" FontSize="18" />
        <Label Content="Please enter the GameID:" Height="28" HorizontalAlignment="Left" Margin="109,112,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="262,114,0,0" Name="gameIDTextbox" VerticalAlignment="Top" Width="120" />
        <Button Content="Connect" Height="23" HorizontalAlignment="Left" Margin="203,167,0,0" Name="connectButton" VerticalAlignment="Top" Width="75" Click="connectButton_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="203,206,0,0" Name="cancelButton" VerticalAlignment="Top" Width="75" Click="cancelButton_Click" />
        <Label Content="" Height="28" HorizontalAlignment="Left" Margin="155,246,0,0" Name="errorLabel" VerticalAlignment="Top" />
    </Grid>
</Page>
